{
  "compilerOptions": {
    "target": "es2018",     //default is es5
    "module": "commonjs",//CommonJs style module in output
    "outDir": "dist"  ,   //change the output directory
    "resolveJsonModule": true,
    "declaration": true,
    "strict": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts"       
  ],
  "exclude": [
    "node_modules",
    "dist"    
  ]
}